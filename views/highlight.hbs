<!DOCTYPE html>
<html>
    <head>
        <title>ZenBook</title>
        
        {{> page_settings }}
        {{> imports_css }}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">

    </head>
    <body>
        {{> navbar}}

        <br>

        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6">
                    <h2 class="mb-3">{{}}</h2>
                    {{#if people}}
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">First name</th>
                                    <th scope="col">Last name</th>
                                    <th scope="col">Phone number</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each people}}
                                    <tr>
                                        <th scope="row">{{this.id}}</th>
                                        <td>{{this.firstname}}</th>
                                        <td>{{this.lastname}}</th>
                                        <td>{{this.phonenumber}}</th>
                                        <td>
                                            <a class="btn btn-outline-primary btn-sm" href="/view?target={{this.id}}">View</a>
                                            <a class="btn btn-outline-danger btn-sm" href="/delete?id={{this.id}}">Delete</a>
                                        </th>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    {{else}}
                        <div class="col d-flex justify-content-center">
                            <p>Nothing to see here...</p>
                        </div>
                    {{/if}}
                </div>
                
                    
