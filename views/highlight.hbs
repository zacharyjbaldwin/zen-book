<!DOCTYPE html>
<html>
    <head>
        <title>ZenBook</title>
        
        {{> page_settings }}
        {{> imports_css }}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">

    </head>
    <body>
        {{> navbar}}

        <br>

        <div class="container">
            
            <div class="row d-flex justify-content-center">
                <div class="col-lg-1">
                    <a href="/view" class="btn btn-dark"><i class="bi bi-arrow-left"></i> Back</a>
                </div>
                <div class="col-lg-5">
                    {{#with person}}
                        <h2>{{this.firstname}} {{this.lastname}}</h2>
                                                
                        <h4 class="mt-5">Personal info</h4>
                        <hr>
                        <p><strong>First name:</strong> {{this.firstname}}</p>
                        <p><strong>Last name:</strong> {{this.lastname}}</p>
                        
                        {{#if this.contact}}
                            <h4 class="mt-5">Contact info</h4>
                            <hr>
                            <p><strong>Phone number:</strong> {{this.contact.phonenumber}}</p>
                            <p><strong>Email:</strong> <a href="mailto:{{this.contact.email}}">{{this.contact.email}}</a></p>
                        {{/if}}

                        {{!-- {{#if this.address}} --}}
                            <h4 class="mt-5">Address info</h4>
                            <hr>
                            <p><strong>Street: </strong> {{this.address.street}}</p>
                            <p><strong>City: </strong> {{this.address.city}}</p>
                            <p><strong>Zip code: </strong> {{this.address.zipcode}}</p>
                        {{!-- {{/if}} --}}

                        {{#if this.occupation}}
                            <h4 class="mt-5">Occupational info</h4>
                            <hr>
                            <p><strong>Company: </strong> {{this.occupation.company}}</p>
                            <p><strong>Title: </strong> {{this.occupation.jobtitle}}</p>
                        {{/if}}

                        

                        <h4 class="mt-5">Actions</h4>
                        <hr>
                        <a href="#" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-warning">Generate vCard</a>
                        <a href="#" class="btn btn-info">Get System ID</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                        
                    {{/with}}
                </div>
            </div>
        </div>

        {{> imports_js }}
    </body>
</html>